# AfetNet Backend Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./afetnet.db

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,exp://192.168.1.100:8081

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30

# EEW Feed Configuration
EEW_FEED_URLS=https://example.com/eew/feed1.json,https://example.com/eew/feed2.json
EEW_POLL_INTERVAL=5

# Push Notification Configuration
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# SMS Gateway Configuration
SMS_GATEWAY_URL=https://api.smsgateway.com/send
SMS_GATEWAY_API_KEY=your-sms-gateway-api-key

# Telemetry Configuration
TELEMETRY_ENABLED=false
TELEMETRY_ENDPOINT=https://telemetry.afetnet.org/collect

# Map Tiles Configuration
TILES_UPDATE_URL=https://tiles.afetnet.org/istanbul
TILES_UPDATE_INTERVAL=86400

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/afetnet.log

# Health Check
HEALTH_CHECK_INTERVAL=60
