# API Keys
USGS_API_KEY=
AMBEE_API_KEY=
XWEATHER_API_KEY=
ZYLA_API_KEY=

# Message Queue Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=earthquake.events
RABBITMQ_ROUTING_KEY=earthquake.detected

# Kafka Configuration (Alternative to RabbitMQ)
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=earthquake.events
KAFKA_CLIENT_ID=earthquake-watcher

# Redis Configuration (for caching and deduplication)
REDIS_URL=redis://localhost:6379
REDIS_TTL_SECONDS=3600

# Service Configuration
POLL_INTERVAL_MS=5000
MAGNITUDE_THRESHOLD=3.0
DEDUPLICATION_WINDOW_SECONDS=3
DEDUPLICATION_DISTANCE_DEGREES=0.1
NOTIFICATION_COOLDOWN_SECONDS=60
USER_RADIUS_KM=50

# Latency & Performance
MAX_RETRIES=3
RETRY_BACKOFF_BASE_MS=1000
REQUEST_TIMEOUT_MS=10000
HEALTH_CHECK_PORT=3000

# Monitoring
METRICS_PORT=9090
LOG_LEVEL=info

# Kubernetes
POD_NAME=
NAMESPACE=default
