{
  "name": "earthquake-event-watcher",
  "version": "1.0.0",
  "description": "Real-time earthquake detection microservice integrating USGS, Ambee, Xweather, and Zyla APIs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t earthquake-event-watcher .",
    "docker:run": "docker run --env-file .env earthquake-event-watcher"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "ioredis": "^5.4.1",
    "prom-client": "^15.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "earthquake",
    "early-warning",
    "microservice",
    "real-time",
    "notification"
  ],
  "author": "AfetNet Team",
  "license": "ISC"
}









