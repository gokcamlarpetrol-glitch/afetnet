{
  "name": "afetnet",
  "version": "1.0.2",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc -p tsconfig.json",
    "lint": "eslint ."
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-native-.*|@react-navigation|expo.*|@expo.*))"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/**/*.(test|spec).(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "src/core/services/**/*.{ts,tsx}",
      "src/core/stores/**/*.{ts,tsx}",
      "src/core/utils/**/*.{ts,tsx}",
      "src/core/components/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    }
  }
}

