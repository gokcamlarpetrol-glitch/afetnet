{
  "name": "afetnet-iap-server",
  "version": "1.0.0",
  "description": "IAP Verification Server for AfetNet",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc && npm run copy-migrations",
    "copy-migrations": "mkdir -p dist/migrations && cp -r src/migrations/* dist/migrations/ 2>/dev/null || true",
    "test": "jest"
  },
  "dependencies": {
    "@sentry/node": "^10.22.0",
    "@sentry/profiling-node": "^10.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^12.6.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "jest": "^29.7.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "iap",
    "in-app-purchase",
    "apple",
    "receipt-validation",
    "afetnet"
  ],
  "author": "AfetNet Team",
  "license": "ISC"
}
